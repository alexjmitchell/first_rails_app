  <%= render "shared/errors", obj: @article %>

  <%= form_for @article do |post| %>
    <div class="article_title_area form-group">
      <%= post.label :title %>
      <br>
      <%= post.text_field :title, class: "form-control" %>
    </div>
    <div class="article_description_area form-group">
      <%= post.label :description %>
      <br>
      <%= post.text_area :description, rows: 5, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= post.submit class: "btn btn-danger" %>
      <%= link_to "Back", articles_path, class: "btn btn-danger" %>
    </div>
  <% end %>